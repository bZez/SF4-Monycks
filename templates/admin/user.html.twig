<h1>Users <a id="addUser" class="text-success" >⊞</a></h1>
<form action="{{ path('user_registration') }}" id="userForm" name="user" method="post"  class="form-signin register" style="display: none">
    <div>

        <input type="text" id="user_username" name="user[username]" placeholder="Username" class="form-control" required="required" />
    </div>
    <div>

        <input type="email" id="user_email" name="user[email]"  placeholder="Email address" class="form-control" required="required" />
    </div>
    <div>

        <input type="password" id="user_plainPassword_first"  placeholder="Password" class="form-control" name="user[plainPassword][first]" required="required" />
    </div>
    <div>

        <input type="password" id="user_plainPassword_second"  placeholder="Confirm password" class="form-control" name="user[plainPassword][second]" required="required" />
    </div>
    <button class="btn btn-lg btn-success btn-block mt-3" type="submit">Create</button>
</form>
{% if users is defined and users is not null %}
    <table class="table table-hover table-striped bg-light">
        <thead>
        <th>?</th>
        <th>S</th>
        <th>$</th>
        <th>✘</th>
        </thead>
        {% for user in users %}
            <tr>
                <td>
                    <b> {{ user.username }}</b></td>
                <td class="text-danger">{{ user.senders | length }}</td>
                <td class="text-success">{{ user.monycks }}</td>
                <td><a href="{{ path('user_delete',{'id':user.id}) }}">
                        <button class="float-right btn btn-sm btn-danger">✘</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endif %}
